{
  "name": "@docknetwork/universal-wallet",
  "version": "2.0.0",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/docknetwork/wallet"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.4",
    "@babel/node": "^7.15.4",
    "@babel/preset-env": "^7.15.6",
    "@babel/register": "^7.18.9",
    "@docknetwork/sdk": "2.5.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-wasm": "^5.1.0",
    "@types/node": "^14.14.35",
    "concurrently": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-sonarjs": "0.5.0",
    "glob": "^7.1.6",
    "jsdoc": "^3.6.3",
    "rollup": "2.28.1",
    "typescript": "^4.2.3",
    "vitest": "^0.28.5"
  },
  "scripts": {
    "lint": "eslint \"src/**/*.js\"",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "example-fs-wallet": "npx babel-node example/example-fs-wallet",
    "example-edv-wallet": "node -r ./babel-register ./example/example-edv-wallet.js",
    "example-edv-http": "npx babel-node example/example-edv-http-storage",
    "run-examples": "yarn example-fs-wallet && yarn example-edv-wallet && yarn example-edv-http",
    "test": "vitest --run --globals",
    "docs": "mkdir out && touch out/.nojekyll && jsdoc src -r -c .jsdoc -d out/reference",
    "type-check": "tsc --allowJs --checkJs --noEmit --moduleResolution node --resolveJsonModule --target ES6 --skipLibCheck true --allowSyntheticDefaultImports true"
  },
  "dependencies": {
    "@digitalbazaar/ed25519-verification-key-2018": "4.0.0",
    "@digitalbazaar/ed25519-verification-key-2020": "4.1.0",
    "@digitalbazaar/edv-client": "^15.0.2",
    "@digitalbazaar/minimal-cipher": "5.1.1",
    "@digitalbazaar/x25519-key-agreement-key-2019": "6.0.0",
    "@digitalbazaar/x25519-key-agreement-key-2020": "3.0.1",
    "@peculiar/webcrypto": "^1.1.6",
    "babel-polyfill": "^6.26.0",
    "base58-universal": "1.0.0"
  }
}
